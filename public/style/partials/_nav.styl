@media all and (max-width 650px) 
  .nav 
    &__section 
      width 100%
      &-user
        display flex 
        border-bottom 1px solid rgba(255,255,255,0.1)
        .avatar 
          min-width 20px
          height 20px
        
        svg 
          display none
      
    &__item
      width 20%
    
    &__link 
      width 100%
      svg 
        // width 5px
        max-width 100%
      
      &--logo
        width 95%
        border-right none 
        svg 
          width 100%
        
      
    
  
  .heart-countbefore 
    content '♥️'
    margin-right 1rem
  
@media all and (min-width 650px) 
  .nav
    &__section-pages
      justify-content space-between
      width 70%

    &__section-user
      display flex
      justify-content space-between
      width 30%

    &__item-logo
      width 20%
      border-bottom none

    &__section-user
      border-bottom none

    &__link
      height 10rem
