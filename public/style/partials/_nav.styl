.nav 
  display flex
  flex-direction column
  justify-content space-between
  align-items center
  flex-wrap wrap
  list-style none
  margin 0
  padding 0
  background $black

  @media all and (min-width 650px) 
    display flex
    flex-direction row 
  
  &__section
    width 100%

  &__section-pages
    display flex
    flex-direction row
    flex-wrap wrap
    &--search 
      flex 1 1 auto

  &__section-user
    border-top 1px solid rgba(255,255,255,0.1)  

  &__section--search
    order 2
    border-top 1px solid rgba(255,255,255,0.1)  
  
  &__item 
    display flex

  &__user-item
    width 100%

    &-logo
      width 100%
      border-bottom 1px solid rgba(255,255,255,0.1)
  
  &__link 
    background $black
    color white
    border-right 1px solid rgba(255,255,255,0.1)
    text-transform uppercase
    padding 1.2rem 1rem 1rem 1rem
    display block
    display flex
    flex-direction column
    align-items center
    justify-content flex-end
    transition transform 0.2s
    border-bottom 5px solid transparent
    svg 
      transition all 0.2s
      fill white
      margin-bottom 1rem
    
    &:hover, &--active 
      border-bottom-color rgba(0,0,0,0.2)
      border-right-color rgba(0,0,0,0.05)
      background linear-gradient(90deg, #48ded4 0%, #a026bf 20%, #e82c75 60%, $yellow 85%, #48ded4 95%) fixed
      svg 
        transform scale(1.1)

      &:hover 
        svg 
          transform none
        
      
      svg 
        width 200px
        margin 0
      
    
  



